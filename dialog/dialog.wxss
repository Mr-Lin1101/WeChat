/* components/dialog/dialog.wxss */
.mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}
.modal {
  width: 480rpx;
  height: 300rpx;
  background-color: #f6f6f6;
  border-radius: 16rpx;
  position: absolute;
  top: 50%;
  margin-top: -150rpx;
  left: 50%;
  margin-left: -240rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.modal_body {
  height: 230rpx;
  display: flex;
  flex-direction: column;
  /* justify-content: space-around; */
  align-items: center;
  font-size: 28rpx;
  color: #646464;
}
.icon_success {
  width: 70rpx;
  height: 70rpx;
  margin: 47rpx auto 25rpx;
}
.modal_footer {
  height: 70rpx;
  display: flex;
  font-size: 28rpx;
}
.modal_btn {
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal_btn_cancel {
  background-color: #e9e9e9;
  color: #646464;
}
.modal_btn_confirm {
  background-color: #1abc9c;
  color: white;
}
